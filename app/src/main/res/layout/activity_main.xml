<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonWeb"
        android:layout_width="330dp"
        android:layout_height="85dp"
        android:layout_marginTop="170dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/web"
        android:text="@string/web"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonDesign"
        android:layout_width="330dp"
        android:layout_height="85dp"
        android:layout_marginTop="280dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/design"
        android:text="@string/design"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonPrint"
        android:layout_width="330dp"
        android:layout_height="85dp"
        android:layout_marginTop="390dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/print"
        android:text="@string/print"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonReklam"
        android:layout_width="330dp"
        android:layout_height="85dp"
        android:layout_marginTop="500dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/reklame"
        android:text="@string/_3d"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonKontakt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="620dp"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:background="@drawable/contactt"
        />

    <Button
        android:id="@+id/buttonLokacion"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="615dp"
        android:layout_marginLeft="260dp"
        android:layout_marginStart="260dp"
        android:background="@drawable/lokacionn"/>

</RelativeLayout>